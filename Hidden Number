import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) 
    {
        Scanner sc = new Scanner(System.in);
        int arr[] = new int[sc.nextInt()], sum=0;
        for (int i=0;i<arr.length;i++)
        {
            arr[i]=sc.nextInt();
            sum+=arr[i];
        }
        if(sum%arr.length==0)
            System.out.println(sum/arr.length);
        else
            System.out.println("-1");
    }
}
